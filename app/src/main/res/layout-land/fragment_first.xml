<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb39c"
    android:visibility="visible"
    tools:context=".FirstFragment"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="310dp"
        android:background="#0000BCD4"
        android:fontFamily="sans-serif-condensed-medium"

        android:text="Hello World!"
        android:textColor="#706F6F"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/About_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="347dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/about"
        android:textColor="#706F6F"

        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="#FF31FFE2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plumeria"
        tools:text="@string/about"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/plumeria"
        android:layout_width="123dp"
        android:layout_height="109dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="36dp"
        android:contentDescription="@string/image"
        android:src="@mipmap/ic_launcher_plum"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/About_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>